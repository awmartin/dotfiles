#!/usr/bin/env ruby

require 'date'

days_of_the_week = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"]

if ARGV.length == 1
  end_date = Date.parse(ARGV[0])
  start_date = (Date.today - Date.today.cwday + 1)
elsif ARGV.length == 2
  if ARGV[0] == 'today'
    start_date = (Date.today - Date.today.cwday + 1)
  else
    start_date = Date.parse(ARGV[0])
  end
  end_date = Date.parse(ARGV[1])
end

d = start_date
begin
  day_of_week = days_of_the_week[d.cwday - 1]
  filename = "#{d}-#{day_of_week}.md"
  `touch #{filename}`
  d = d + 1
end while d <= end_date

